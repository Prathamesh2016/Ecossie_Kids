                            <p><a href="~/Views/Home/Index.cshtml" class="text-white">Home</a> <span class="mx-3">/</span> <strong>Climate Change Facts</strong></p>
                        </div>

                    </div>
                </div>
            </div>
        </div>   @* Description of the form *@


