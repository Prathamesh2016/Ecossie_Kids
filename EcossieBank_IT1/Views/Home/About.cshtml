
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}
<head>
    <link href="https://fonts.googleapis.com/css?family=DM+Sans:300,400,700|Indie+Flower" rel="stylesheet">
</head>

<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">
    <div class="site-wrap" id="home-section">
        <div class="ftco-blocks-cover-1">
            <!--data-stellar-background-ratio="0.5" style="background-image: url('images/hero_1.jpg')" -->
            <div class="site-section-cover overlay about-banner" data-stellar-background-ratio="0.5">
                <div class="container">
                    <div class="row align-items-center ">
                        <div class="col-md-5 mt-5 pt-5">
                            <span class="text-cursive h5 text-mine">Welcome To Our Website</span>
                            <h1 class="mb-3 font-weight-bold text-teal">About Us</h1>
                            <p><a href="@Url.Action("Index", "Home")" class="text-white">Home</a> <span class="mx-3">/</span> <strong>About</strong></p>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="site-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <img src="~/images/img_1.jpg" alt="Image" class="img-fluid">
                    </div>
                    <div class="col-md-5 ml-auto pl-md-5">
                        <span class="text-cursive h5 text-red">About Us</span>
                        <h3 class="text-black">Bring Fun Life To Your Kids</h3>
                        <p><span>Our vision as a brand is “A greener community” by encouraging more Victorians to save electricity at home and having an impact on a global level.</span> </p>
                        <p class="mt-5"><a href="#more_team" class="btn btn-warning py-4 btn-custom-1">More About Us</a></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="site-section bg-teal">
            <div class="container">
                <div class="row justify-content-center text-center mb-5 section-2-title">
                    <div class="col-md-6" id="more_team">
                        <span class="text-cursive h5 text-red">The Team</span>
                        <h3 class="text-white text-center">Meet The Team</h3>
                        <p class="mb-5">Eco Pathseekers is a team dedicated to reducing the ecological footprint and make a positive impact on the world by promoting energy efficiency in Victoria. The team is composed of 4 members with a variety of skills and experiences, who are dependent on each other while working towards common goals.</p>
                    </div>
                </div>
                <div class="row align-items-stretch">
                    <div class="col-lg-6 col-md-6 mb-5">
                        <div class="post-entry-1 h-100 person-1 teal">

                            <img src="~/images/Person1.png" alt="Image"
                                 class="img-fluid">

                            <div class="post-entry-1-contents">
                                <span class="meta">Founder</span>
                                <h2>Prathamesh Ayare</h2>
                                <p>Business Analyst / Developer</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 mb-5">
                        <div class="post-entry-1 h-100 person-1 yellow">

                            <img src="~/images/Person2.png" alt="Image"
                                 class="img-fluid">

                            <div class="post-entry-1-contents">
                                <span class="meta">Founder</span>
                                <h2> Lihui Lin</h2>
                                <p>Developer / QA</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 mb-5">
                        <div class="post-entry-1 h-100 person-1 red">

                            <img src="~/images/Person3.png" alt="Image"
                                 class="img-fluid">

                            <div class="post-entry-1-contents">
                                <span class="meta">Founder</span>
                                <h2>Yi Hsiao</h2>
                                <p>Data Scientist / UI Designer</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 mb-5">
                        <div class="post-entry-1 h-100 person-1 green">

                            <img src="~/images/Person4.png" alt="Image"
                                 class="img-fluid">

                            <div class="post-entry-1-contents">
                                <span class="meta">Founder</span>
                                <h2>Weiyen Lim</h2>
                                <p>Business Analyst / UI Designer</p>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>







    </div>
</body>
